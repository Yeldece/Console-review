<form action="/home/update/" method="post">
    <input type="hidden" name="ProductId" value="@Model.ProductId" />
    <label for="PName">Name</label>
    <input type="text" id="PName" name="ProductName" value="@Model.ProductName" />
    <label for="PCost">Unit Price </label>
    <input type="text" id="PCost" name="Cost" value="@Model.Cost" />
    <label for="PStock"></label>
    <input type="text" id="PStock" name="Stock" value="@Model.Stock" />
    <label for="PCId">Category ID </label>
    <input type="text" id="PCId" name="CategoryId" value="@Model.CategoryId" />

    <input type="submit" value="Update" />

</form>
